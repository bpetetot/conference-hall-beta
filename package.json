{
  "name": "conference-hall",
  "version": "0.8.4",
  "private": true,
  "bugs": "https://github.com/bpetetot/conference-hall/issues",
  "repository": "github:bpetetot/conference-hall",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:debug": "react-scripts --inspect-brk test --runInBand --env=jsdom",
    "lint": "eslint --ext js,jsx src",
    "size": "bundlesize",
    "doc": "docz dev",
    "doc:build": "docz build"
  },
  "dependencies": {
    "@k-ramel/react": "2.0.0",
    "@k-redux-router/core": "^1.0.0",
    "@k-redux-router/react-k-ramel": "^1.0.1",
    "classnames": "^2.2.6",
    "date-fns": "^1.30.1",
    "final-form": "^4.12.0",
    "final-form-arrays": "^1.1.2",
    "firebase": "^5.8.6",
    "font-awesome": "^4.7.0",
    "hoc-react-loader": "^6.3.0",
    "immutadot": "^1.0.0",
    "k-ramel": "2.0.0",
    "lodash": "^4.17.11",
    "marked": "^0.6.1",
    "normalize.css": "^8.0.1",
    "path-to-regexp": "^2.4.0",
    "popper.js": "^1.14.7",
    "prop-types": "^15.7.2",
    "randomcolor": "^0.5.4",
    "react": "^16.8.4",
    "react-datepicker": "^2.1.0",
    "react-dom": "^16.8.4",
    "react-final-form": "^4.1.0",
    "react-final-form-arrays": "2.0.1",
    "react-places-autocomplete": "^7.2.1",
    "react-sizes": "^1.0.4",
    "redux": "^4.0.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "7.4.0",
    "bundlesize": "^0.17.1",
    "docz": "^0.13.7",
    "docz-theme-default": "^0.13.7",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "firebase-tools": "^6.5.0",
    "prettier": "^1.16.4",
    "react-scripts": "2.1.8",
    "react-test-renderer": "^16.8.4",
    "redux-devtools-extension": "^2.13.8"
  },
  "resolutions": {
    "ansi-styles": "^3.2.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "import/no-extraneous-dependencies": 0,
      "import/no-unresolved": 0,
      "import/extensions": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-one-expression-per-line": 0,
      "react/destructuring-assignment": 0,
      "jsx-a11y/label-has-for": 0,
      "jsx-a11y/click-events-have-key-events": 0,
      "jsx-a11y/interactive-supports-focus": 0,
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "aspects": [
            "noHref",
            "invalidHref",
            "preferButton"
          ]
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "bundlesize": [
    {
      "path": "./build/static/js/*.js",
      "maxSize": "350 kB"
    },
    {
      "path": "./build/static/css/*.css",
      "maxSize": "10 kB"
    }
  ],
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
